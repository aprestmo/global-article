---
import { Icon } from 'astro-icon';
---
<header>
  <div>
    <a href="/">
      <Icon name="dn" />
    </a>
    <select>
      <option value="light">Hvit</option>
      <option value="blue">Bl√•</option>
      <option value="yellow">Gul</option>
      <option value="pink">Rosa</option>
      <option value="dark">Svart</option>
    </select>
  </div>
</header>

<style>
  header {
    background-color: var(--header-bkg, hsl(0 0% 100%));
    border-block-end: 1px solid var(--header-separator, #d9dce2);
  }
  
  div {
    align-items: center;
    block-size: var(--header-height, 3.5rem);
    display: flex;
    inline-size: min(var(--header-width, 1660px), 100vw - calc(var(--site-padding, 1rem) * 2));
    justify-content: space-between;
    margin-inline: auto;

    @media (--medium) {
      --header-height: 6rem;
      --logo-height: 2rem;
    }
  }

  a {
    color: var(--logo-color, hsl(219 59% 18%));
  }

  svg {
    block-size: var(--logo-height, 1.4688rem);
  }
</style>