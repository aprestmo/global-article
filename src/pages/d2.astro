---
import Layout from "../layouts/Layout.astro";
import Story from "../organisms/Story.astro";
import StoryHeader from "../molecules/StoryHeader.astro";
import Grid from "../atoms/Grid.astro";

const theme = "d2";

import Article from "../content/d2/d2.mdx";

let article = await Astro.glob("../content/d2/d2.mdx");
---

{
  article.map((item) => (
    <Layout title={`${item.frontmatter.title}|`} theme={theme} language="no">
      <Story>
        <StoryHeader
          title={item.frontmatter.title}
          lead={item.frontmatter.lead}
          img={item.frontmatter.hero}
          figcaption={item.frontmatter.caption}
        />
        <Grid>
          <Article />
        </Grid>
      </Story>
    </Layout>
  ))
}
