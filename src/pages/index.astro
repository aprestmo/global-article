---
// component imports
import Layout from "../layouts/Layout.astro";

// data imports
import navData from "../data/navData";
---

<Layout title="Publikasjoner" theme="dngroup">
  <div class="flow">
    <h2>Velg publikasjon</h2>
    <nav>
      <ul role="list">
        {
          navData.map((item) => (
            <li>
              <a href={item.path}>{item.publication}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</Layout>

<style>
  div {
    background-color: #fafafa;
    display: flex;
    flex-direction: column;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    inline-size: min(75rem, 100% - 2rem);
    justify-content: center;
    margin-inline: auto;
    padding: 2rem;
  }

  h2 {
    margin-inline: auto;
    margin-bottom: 2rem;
  }
  nav {
    width: 100%;
  }

  ul[role="list"] {
    list-style-type: none;
    padding-inline-start: 0;
  }

  ul {
    --grid-layout-gap: 1.5rem;
    --grid-column-count: 4;
    --grid-item--min-width: 10rem;

    --gap-count: calc(var(--grid-column-count) - 1);
    --total-gap-width: calc(var(--gap-count) * var(--grid-layout-gap));
    --grid-item--max-width: calc(
      (100% - var(--total-gap-width)) / var(--grid-column-count)
    );

    display: grid;
    grid-template-columns: repeat(
      auto-fill,
      minmax(max(var(--grid-item--min-width), var(--grid-item--max-width)), 1fr)
    );
    grid-gap: var(--grid-layout-gap);
  }

  li {
    background-color: var(--color-neutral-800);
    border-radius: 0.25rem;
    transition: all 0.5s ease;
    padding: 1rem;
  }

  li:hover {
    background-color: hsl(0 0% 50% / 1);
  }

  a {
    --color-link-default: hsl(0 0% 100%);
    --text-decoration-style: none;
    display: flex;
    justify-content: center;
    padding: 0.375rem;
    text-decoration: var(--text-decoration-style);
  }
</style>
