---
export interface Props {
  text: string;
  href: string;
  classes?: string;
}

const { text, href, classes } = Astro.props;
---

<a href={href} class:list={[classes]}>{text}<slot/></a>

<style>
  a {
    color: currentColor;
    text-decoration: none;
  }

  .tag {
    /* border: 1px solid currentColor; */
    border: 1px solid #d8d8d8;
    border-radius: var(--radius);
    display: inline-flex;
    font-family: var(--typography-ui-font-family), sans-serif;
    font-size: 0.75rem;
    inline-size: max-content;
    letter-spacing: 0.04em;
    line-height: 1;
    padding-block: 9px 10px;
    padding-inline: 20px;
    transition: background-color 200ms ease-in-out;

    &:focus-visible,
    &:hover {
      background-color: #f6f7f9;
    }
  }

    .button {
    /* border: 1px solid currentColor; */
    border: 1px solid #d8d8d8;
    border-radius: var(--radius);
    background-color: var(--colors-brand-50);
    display: inline-flex;
    font-family: var(--typography-ui-font-family), sans-serif;
    font-size: 0.75rem;
    inline-size: max-content;
