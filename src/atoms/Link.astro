---
export interface Props {
  text?: string;
  href: string;
  classes?: string;
  icon?: string;
}

const { text, href, classes, icon } = Astro.props as Props;
---
<div>
    <a href={href} class:list={[classes]}>
      {icon && <img class="icon" src={icon} />}
      <span class="text">{text}</span><slot /></a
    >
</div>


<style>
  a {
    color: var(--color-link-default);
    font-family: var(--font-family-utility), sans-serif;
    font-weight: bold;
    font-size: 1rem;
    text-underline-offset: 0.4rem;
    text-decoration: none !important;

    &:hover {
      color: var(--color-link-hover);
    }

    &:active {
      color: var(--color-link-active);
    }
  }

  .icon {
    margin-right: 6px;
    max-width: 20px;
    width: 20px;
  }

  .text {
    padding: 12px 0px;
  }

 .round{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size:  var(--typography-utility-s-font-size);
    font-family: var(--typography-utility-s-font-family);
    letter-spacing: 0.04em;
    line-height: 1;
    transition: background-color 200ms ease-in-out;
    background-color: var(--color-neutral-0);
    padding: 10px;
    color: var(--color-typography-default) !important;
    white-space: nowrap;
    border: 1px solid;
    border-color: var(--color-link-default);
    border-radius: 50%;

    .text{
      padding: 4px 0px;
      display: none;
    }

    .icon {
      margin-right: 0px;
      max-width: 20px;
  }

    &:focus-visible,
    &:hover {
      background-color: var(--color-brand-utility-50) !important;
      border-color: var(--color-link-hover);
    }
 }


  .pill {
    display: flex;
    align-items: center;
    border-radius: var(--border-radius-s);
    font-size: var(--typography-utility-s-font-size);
    font-family: Sharp Grotesk Book21;
    font-weight: normal;
    inline-size: max-content;
    letter-spacing: 0.04em;
    line-height: .8;
    padding-inline: 14px;
    transition: background-color 200ms ease-in-out;
    background-color: var(--color-neutral-0);
    color: var(--color-typography-default) !important;
    white-space: nowrap;
    border: 1px solid;
    border-color: var(--color-link-default);
    border-radius: var(--border-radius-s);
    transition: all 200ms ease-in-out;

    &:focus-visible,
    &:hover {
      background-color: var(--color-neutral-50) !important;
      border-color: var(--color-link-hover);
    }
  }

  .tag {
    display: flex;
    align-items: center;
    font-size: var(--typography-utility-s-font-size);
    font-family: Sharp Grotesk Book21;
    font-weight: normal;
    inline-size: max-content;
    letter-spacing: 0.04em;
    line-height: .8;
    padding-inline: 14px;
    transition: background-color 200ms ease-in-out;
    background-color: var(--color-neutral-50);
    color: var(--color-typography-default) !important;
    white-space: nowrap;
    border: 1px solid;
    border-color: var(--color-header-navigation-divider);
    border-radius: var(--border-radius-s);

    &:focus-visible,
    &:hover {
      background-color: var(--color-neutral-50) !important;
    }
  }

  .button {
    display: flex;
    align-items: center;
    white-space: nowrap;
    /* border: 1px solid currentColor; */
    background-color: var(--color-brand-utility-700);
    color: var(--color-brand-utility-0) !important;
    border-radius: var(--border-radius-s);
    font-size: var(--typography-utility-s-font-size);
    font-family: Sharp Grotesk Book21;
    font-weight: normal;
    inline-size: max-content;
    letter-spacing: 0.04em;
    line-height: .8;
    padding-inline: 14px;
    transition: background-color 200ms ease-in-out;

    &:focus-visible,
    &:hover {
      background-color: var(--color-brand-utility-500) !important;
    }
  }


</style>
