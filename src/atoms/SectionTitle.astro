---
  import Link from "../atoms/Link.astro";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<div class="section-title">
  <h3>{title}</h3>

          <Link href="/" text="Se alle" classes="tag" icon="../img/profile.svg" />

  <slot />
</div>

<style>
  div {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: var(--row-gap);
    padding: var(--row-gap) 0;
    inline-size: min(var(--page-width), 100vw - calc(var(--site-padding) * 2));
    margin-inline: auto;
    border-bottom: 1px solid var(--color-page-divider);
  }
</style>
