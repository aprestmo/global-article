---
import Link from "../atoms/Link.astro";
---

<div>
  <ul>
    <figure>
      <picture>
        <img src="../img/profile.png" alt="Byline-img" />
      </picture>
    </figure>

    <li class="author">
      <p><a href="mailto:harald.berglihn@dn.no">Harald Berglihn</a></p>
      <span>Journalist | Oslo</span>
    </li>
  </ul>
  <li><Link href="/" text="Follow" classes="tag" /></li>
</div>

<style>
  div {
    display: grid;
  }

  ul {
    display: flex;
    column-gap: 1rem;
    align-items: center;
  }

  .author {
    display: flex;
    flex-direction: column;
  }

  figure {
    border-radius: 50%;
    border: 1px solid tomato;
    overflow: hidden;
    border: 1px solid var(--color-neutral-800);
    width: 50px;
  }

  picture img {
    transform: scale(1.2);
  }

  a {
    color: var(--link-color);
    font-family: var(--typography-ui-font-family), sans-serif;
    font-weight: bold;
    font-size: 1rem;
    text-underline-offset: 0.4rem;
    line-height: 1;
    text-decoration: none;

    @media (--medium) {
      font-size: 1rem;
    }
  }
  span {
    color: var(--color-typography-secondary);
    font-family: var(--typography-ui-font-family), sans-serif;
    font-size: 0.75rem;
  }
</style>
