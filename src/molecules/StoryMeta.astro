---
import Byline from "../molecules/Byline.astro";
import Link from "../atoms/Link.astro";
import Interaction from "../molecules/Interaction.astro";
---

<div class="flex-row">
  <Byline />
  <div>
    <ul role="list" class="info">
      <li>
        <li>01. mars 2023</li>
        <li class="divider">|</li>
        <li>Lesetid: 2 min</li>
        <li class="divider">|</li>
        <li>For abonnenter</li>
        <li class="divider">|</li>
        <li>Posted in <a href="#">Finans</a></li>
      </li>
    </ul>
  </div>
</div>

<div class="flex-row">
  <Interaction />
</div>

<style>
  /* Article info Category and Date */
  .flex-row {
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    order: var(--story-meta);
    justify-content: space-between;
    row-gap: 6px;
    inline-size: min(var(--grid-width), 100vw - calc(var(--site-padding) * 2));
    @media only screen and (min-width: 768px) {
      flex-direction: row;
      align-items: center;
    }
  }

  ul[role="list"] {
    display: flex;
    justify-content: space-between;
    flex-direction: row-reverse;
    align-items: center;
    font-family: var(--typography-ui-font-family);
    color: var(--color-neutral-100);
    column-gap: 0.3rem;
    font-size: 0.7rem;

    &.divider {
      color: var(--color-divider);
    }

    @media only screen and (min-width: 768px) {
      column-gap: 0.6rem;
      font-size: 0.9rem;
      flex-direction: row;
    }
  }
</style>
