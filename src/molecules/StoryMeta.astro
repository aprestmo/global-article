---
import Byline from "../molecules/Byline.astro";
import Link from "../atoms/Link.astro";
import Interaction from "../molecules/Interaction.astro";
---

<div class="flex-row">
  <Byline />
  <ul role="list" class="info">
    <li class="mobile-only">
      Publisert 17. juni 2023, i <a href="#">Finans</a>
    </li>
  </ul>
  <div>
    <ul role="list" class="info">
      <li class="desktop-only">
        Publisert 17. juni 2023, i <a href="#">Finans</a>
      </li>
<!--       <li>
        <Link href="#" text="Lagre" classes="tag" icon="../img/heart.svg" />
      </li> -->
    </ul>
  </div>

  <style>
    /* Article info Category and Date */
    .flex-row {
      margin-inline: auto;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      order: var(--story-meta);
      justify-content: space-between;
      row-gap: var(--row-gap);
      inline-size: min(
        var(--grid-width),
        100vw - calc(var(--site-padding) * 2)
      );

      border-bottom: 1px solid;
      border-color: var(--color-page-divider);
      padding-bottom: var(--row-gap);

      @media only screen and (min-width: 768px) {
        flex-direction: row;
        align-items: center;
      }
    }

    ul[role="list"] {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      flex-wrap: nowrap;
      color: var(--color-typography-secondary);
      font-size: var(--typography-utility-m-font-size) !important;
    font-family: var(--typography-utility-m-font-family);
    font-weight: normal;
      column-gap: 0.5rem;

      &.divider {
        color: var(--color-divider);
      }

      @media only screen and (min-width: 768px) {
        column-gap: 1rem;
        font-size: 0.9rem;
        flex-direction: row;
      }
    }
  </style>
</div>
