---
import Byline from "../molecules/Byline.astro";
import Link from "../atoms/Link.astro";
import Interaction from "../molecules/Interaction.astro";
---

<div class="flex-row">
  <Byline />
  <div>
    <ul role="list" class="info">
      <li>
        <li>Oppdatert 17:03</li>
        <li class="divider">|</li>
        <li>Publisert i <a href="#">Finans</a></li>
        <li class="divider">|</li>
        <li>
          <Link href="#" text="Lagre" classes="tag" icon="../img/heart.svg" />
        </li>
      </li>
      <li class="divider">|</li>
      <li>
        <Link href="#" text="Gi bort" classes="tag" icon="../img/gift.svg" />
      </li>
    </ul>
  </div>

  <style>
    /* Article info Category and Date */
    .flex-row {
      margin-inline: auto;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      order: var(--story-meta);
      justify-content: space-between;
      row-gap: 6px;
      inline-size: min(
        var(--grid-width),
        100vw - calc(var(--site-padding) * 2)
      );
      @media only screen and (min-width: 768px) {
        flex-direction: row;
        align-items: center;
      }
    }

    ul[role="list"] {
      display: flex;
      flex-direction: row-reverse;
      justify-content: space-between;
      align-items: center;
      flex-wrap: nowrap;
      color: var(--color-typography-secondary);
      font-size: var(--typography-utility-m-font-size) !important;
      font-family: var(--typography-utility-m-font-family) !important;
      column-gap: 0.3rem;
      font-size: 0.7rem;

      &.divider {
        color: var(--color-divider);
      }

      @media only screen and (min-width: 768px) {
        column-gap: 0.6rem;
        font-size: 0.9rem;
        flex-direction: row-reverse;
      }
    }
  </style>
</div>
