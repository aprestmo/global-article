---
import StoryImage from "../molecules/StoryImage.astro";
import StoryMeta from "../molecules/StoryMeta.astro";

interface Props {
  title: string;
  img: string;
  lead: string;
  figcaption: string;
}

const { img, title, lead, figcaption } = Astro.props as Props;
---

<header class="flow article-top">
  <h1>{title}</h1>
  <p class="lead">
    {lead}
  </p>
  <StoryImage src={img} figcaption={figcaption} />
  <StoryMeta />
</header>

<style>
  header {
    align-items: flex-start;
    color: var(--color-text-typo, currentColor);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: 100vw;
    width: 100%;
    margin-inline: auto;
    padding-bottom: var(--row-gap);
    margin-bottom: var(--row-gap);
  }

  /* Title */

  h1 {
    position: var(--title-position);
    order: var(--hero-text);
    font-family: var(--hero-font, "SmBold23", sans-serif);
    font-weight: 700;
    font-size: var(--tile-size);
    margin-top: var(--row-gap);
    line-height: 1.3;
    inline-size: min(var(--grid-width), 100vw - calc(var(--site-padding) * 2));
    text-align: var(--text-align);
  }

  /* Innress */
  p.lead {
    order: var(--lead-text);
    font-size: var(--typography-editorial-lead-min-font-size) !important;
    font-weight: 400;
    line-height: var(--typography-editorial-lead-min-line-height);
    inline-size: min(var(--grid-width), 100vw - calc(var(--site-padding) * 2));
    text-align: var(--text-align);
    @media only screen and (min-width: 768px) {
      font-size: var(--typography-editorial-lead-max-font-size) !important;

      line-height: var(--typography-editorial-lead-max-line-height);
    }
  }
</style>
