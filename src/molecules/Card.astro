---
import Link from "../atoms/Link.astro";

interface Props {
  title: string;
  excerpt: string;
  url: string;
  category: string;
  img: string;
  slug: string;
  date: string;
}

const { slug, img, url, title, excerpt, category, date } = Astro.props as Props;
---

<div class="card">
  <figure>
    <picture>
      <img src={img} />
    </picture>
  </figure>
  <div class="card-info">
    <h3 class="title">
      {title}
    </h3>
    <p class="date">{category}</p>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    width: 100%;
    background: none;
    border-radius: var(--radius);
    grid-column: span 4;
    overflow: hidden;

    &:first-child {
      grid-column: span 12;
    }
  }

  .card-info {
    padding: 0.5rem 1rem 2rem 0rem;
  }
</style>
