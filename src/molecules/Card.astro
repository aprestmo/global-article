---
import Link from "../atoms/Link.astro";

interface Props {
  title: string;
  excerpt: string;
  url: string;
  category: string;
  img: string;
  slug: string;
  date: string;
  size: string;
}

const { slug, img, url, title, excerpt, category, date, size } =
  Astro.props as Props;
---

<div class="card">
  <figure>
    <picture>
      <img src={img} />
    </picture>
  </figure>
  <div class="card-info">
    <h3 class="title">
      {title}
    </h3>
    <span class="category">{category}</span>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    width: 100%;
    background: none;
    grid-column: span 4;
    overflow: hidden;
    font-family: var(--font-family-heading);
    border-radius: var(--radius);

    &:first-child {
      grid-column: span 12;
    }
  }

  .card-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0.5rem 1rem 2rem 0rem;
  }

  .category {
    margin-top: 2rem;
    font-size: var(--typography-utility-m-font-size);
    font-family: var(--typography-utility-m-font-family);
  }
</style>
