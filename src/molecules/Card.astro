---
import Link from "../atoms/Link.astro";

interface Props {
  title: string;
  excerpt: string;
  url: string;
  category: object;
  img: string;
  slug: string;
  date: string;
  size: string;
  classes?: string;
  textalign: string;
}

const {
  slug,
  img,
  paid,
  url,
  title,
  excerpt,
  category = "Finans",
  date,
  size,
  align = "left",
  classes,
} = Astro.props as Props;
---

<div class:list={[classes]}>
  <figure class="teaser-image">
    <picture>
      <img src={img} />
    </picture>
  </figure>

  <div class="teaser-info">
    <h3 class="title" style={`text-align: ${align}`}>
      {title}
    </h3>
    <ul class="category" style={`justify-content: ${align}`}>
      <li>{category}</li>
      <li>|</li>
      <li>Abonnent</li>
    </ul>
  </div>
</div>

<style>
  .teaser-info .title {
    font-size: clamp(1.3rem, 6cqw, 4rem) !important;
  }

  /*      @container teaser (min-width: 500px) {
      .teaser-info .title{
          font-size: clamp(1.3rem, 12cqw, 3rem) !important
    }
    }*/

  .teaser {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    container-type: inline-size;
    container-name: teaser;
    width: 100%;
    grid-column: span 12;
    overflow: hidden;
    font-family: var(--font-family-heading);
    margin-bottom: var(--row-gap);
    border-radius: var(--border-radius-s) var(--border-radius-s) 0 0;
    background-color: var(--color-teaser-standard-bg);

    @media only screen and (min-width: 768px) {
      grid-column: span 3;
    }

    &.row {
      flex-direction: row;
    }

    &.standard {
      background-color: var(--color-teaser-standard-bg);
      color: var(--color-teaser-standard-fg);
      border-bottom: 1px solid var(--color-teaser-standard-divider);
    }

    &.brand {
      background-color: var(--color-teaser-brand-bg);
      color: var(--color-teaser-brand-fg);
      border-radius: var(--border-radius-s);
    }

    &.highlight {
      background-color: var(--color-teaser-highlight-bg);
      color: var(--color-teaser-highlight-fg);
      border-radius: var(--border-radius-s);
    }

    &.inverted {
      background-color: var(--color-teaser-inverted-bg);
      color: var(--color-teaser-inverted-fg);
      border-radius: var(--border-radius-s);
    }

    &.opinion {
      background-color: var(--color-teaser-opinion-bg);
      color: var(--color-teaser-opinion-fg);
      border-radius: var(--border-radius-s);
    }
  }

  .category {
    display: flex;
    column-gap: 0.5rem;
    margin-top: 1rem;
    font-size: var(--typography-utility-s-font-size);
    font-family: var(--typography-utility-s-font-family);
  }

  .standard .category {
    color: var(--color-teaser-standard-subtle-fg);
  }

  .brand .category {
    color: var(--color-teaser-brand-subtle-fg);
  }

  .highlight .category {
    color: var(--color-teaser-hightlight-subtle-fg);
  }

  .inverted .category {
    color: var(--color-teaser-inverted-subtle-fg);
  }

  .opinion .category {
    color: var(--color-teaser-opinion-subtle-fg);
  }

  .teaser-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0rem 0rem 1rem 0rem;
    width: 100%;
    height: 100%;
  }

  .brand .teaser-info,
  .highlight .teaser-info,
  .inverted .teaser-info,
  .opinion .teaser-info {
    padding: 0rem 1rem 1rem 1rem;
  }

  .teaser-info h3 {
    margin-top: 8px;
  }
</style>
