---
interface Props {
  alt: string;
  src: string;
  figcaption: string;
}

const { src, alt, figcaption } = Astro.props as Props;
---

<figure>
  <picture>
    <img src={src} alt={alt} />
  </picture>
  <figcaption>
    {figcaption}
  </figcaption>
</figure>

<style>
  figure {
    order: var(--hero-figure);
    margin-inline: auto;
    inline-size: min(
      var(--figure-width),
      100vw - calc(var(--site-padding) * 0)
    );
    text-align: var(--text-align);

    @media only screen and (min-width: 768px) {
      inline-size: min(
        var(--figure-width),
        100vw - calc(var(--site-padding) * 2)
      );
    }
  }

  picture {
    display: flex;
    justify-content: center;
  }

  img {
    inline-size: var(--figure-width);
  }

  figcaption {
    color: var(--color-typography-secondary);
    font-family: var(--typography-ui-font-family), sans-serif;
    inline-size: min(var(--grid-width), 100vw - calc(var(--site-padding) * 2));
    font-size: 1rem;
    line-height: 1.5;
    margin-inline: auto;
    padding-block-start: 0.6rem;
  }
</style>
